{
  "compilerOptions": {
  "target": "ES2020",
  "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["*.ts", "models/**/*.ts", "../shared/**/*.ts"]
}
